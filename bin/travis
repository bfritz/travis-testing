#!/bin/bash -x

set -e

echo "/etc/sbt/jvmopts:"
cat /etc/sbt/jvmopts

echo
echo "/etc/sbt/sbtopts:"
cat /etc/sbt/sbtopts

SBT_CMD=$(which sbt)
echo "sbt is:"
echo $SBT_CMD
ls -al $SBT_CMD

echo "sbt is from:"
dpkg -S $SBT_CMD

echo "sbt sha1:"
sha1sum $SBT_CMD

unset JVM_OPTS  # ignore /etc/sbt/jvmopts
sbt -J-Xms1000M -J-Xmx1234M -J-XX:MaxMetaspaceSize=234M -Xss6M about
